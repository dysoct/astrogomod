<?xml version="1.0" encoding="utf-8"?>
<!--
Genre tile layout used for genre swimlane data.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_genre_layout"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp">

    <ImageView
        android:id="@+id/tile_poster"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"/>
    <View
        android:id="@+id/tile_poster_gradient"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/tile_genre_poster_gradient"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false">
        <TextView
            android:id="@+id/tile_metadata1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="13dp"
            android:lineSpacingExtra="-5dp"
            android:textColor="#ebebeb"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tile_metadata1_second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#B3EBEBEB"
            android:textSize="12dp"/>
    </LinearLayout>
</RelativeLayout>