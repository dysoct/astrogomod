<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hamburger_menu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hamburger_menu_item_height">

    <com.cisco.veop.sf_ui.ui_configuration.UiConfigTextView
        android:id="@+id/menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24sp"
        android:text="Sample"
        android:textSize="20sp"
        android:includeFontPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cisco.veop.sf_ui.ui_configuration.UiConfigTextView
        android:id="@+id/menu_item_submenu_image"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="&gt;" />

    <View
        android:id="@+id/menu_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hamburger_divider_height"
        android:layout_marginStart="@dimen/hamburger_divider_layout_marginLeft"
        android:background="#19ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>