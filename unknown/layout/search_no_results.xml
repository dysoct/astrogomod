<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_no_search_layout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_no_result_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Sorry, we could not find any results."
        android:textColor="#BCBCBC"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/search_no_result_sub_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Try searching for another TV show, movie, actor or genre."
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/search_no_result_msg"
        app:layout_constraintTop_toBottomOf="@+id/search_no_result_msg"
        tools:ignore="MissingConstraints">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>