<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/day_of_week_text_selected"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:visibility="visible"
        android:text="\u2713"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/day_of_week_text_left"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/day_of_week_text_selected"
        android:minEms="4"
        android:text="Wednesday"
        android:textColor="@android:color/white"
        android:textSize="@dimen/vertical_grid_day_of_week_textsize"
        android:textStyle="normal"
        android:includeFontPadding="false">
    </TextView>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/day_of_week_text_right"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:minEms="4"
        android:text="JAN 21"
        android:textColor="@android:color/white"
        android:textSize="@dimen/vertical_grid_day_of_week_textsize"
        android:textStyle="normal"
        android:includeFontPadding="false">
    </TextView>


</RelativeLayout>
