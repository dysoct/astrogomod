<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tile_vertical_swimlane_layout"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tile_poster"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:src="@drawable/default_event_bitmap_vod_portrait"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/tile_item_title"
        android:text="Knives Out "
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tile_poster"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="148dp"
        android:textColor="#bcbcbc"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>