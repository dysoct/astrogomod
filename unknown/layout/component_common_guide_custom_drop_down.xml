<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:duplicateParentState="true">

    <ImageView
        android:id="@+id/tv_component_guide_dropdown_icon_triangle_up"
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:rotation="0"
        android:layout_marginRight="0dp"
        android:src="@drawable/tv_component_guide_dropdown_tooltip_triangle"
        />

    <ListView
        android:id="@+id/tvComponentGuideDropdownListContent"
        android:layout_width="@dimen/component_custom_drop_down_default_width"
        android:layout_height="@dimen/component_custom_drop_down_default_height"
        android:layout_marginTop="0dp"
        android:paddingTop="@dimen/component_custom_drop_down_default_padding_top"
        android:paddingBottom="@dimen/component_custom_drop_down_default_padding_bottom"
        android:divider="@null" />

    <ImageView
        android:id="@+id/tv_component_guide_dropdown_icon_triangle_down"
        android:layout_width="10dp"
        android:layout_height="5dp"
        android:rotation="180"
        android:src="@drawable/tv_component_guide_dropdown_tooltip_triangle"
        />

</LinearLayout>