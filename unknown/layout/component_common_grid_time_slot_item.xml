<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true">

    <TextView
        android:id="@+id/timeslotTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/vertical_guide_timeslot_start_margin"
        android:background="@android:color/transparent"
        android:duplicateParentState="true"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:text="11.00 PM"
        android:textColor="@android:color/white"
        android:textSize="@dimen/grid_timeslot_textsize"
        android:typeface="serif" />

    <FrameLayout
        android:id="@+id/timeslot_seperator"
        android:layout_width="@dimen/guide_time_slot_cell_gap"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@android:color/black" />
</RelativeLayout>
