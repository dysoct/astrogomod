<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"


    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frame_profile_add"
        android:visibility="gone"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.cisco.veop.client.userprofile.screens.CircularImageView
            android:id="@+id/img_profile_add"
            android:layout_width="match_parent"
            android:tint="#6F000000"
            android:layout_height="match_parent">
        </com.cisco.veop.client.userprofile.screens.CircularImageView>

        <com.cisco.veop.sf_ui.ui_configuration.UiConfigTextView
            android:id="@+id/txt_edit_icon"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <com.cisco.veop.client.userprofile.screens.CircularImageView
        android:id="@+id/profiler_avatar_content_item_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </com.cisco.veop.client.userprofile.screens.CircularImageView>


    <TextView
        android:id="@+id/profiler_name_content_item_text_view"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"></TextView>


</LinearLayout>