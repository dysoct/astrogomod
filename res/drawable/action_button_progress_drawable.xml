<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="ring" android:innerRadiusRatio="2.6" android:useLevel="true" android:thickness="2.0dip">
            <solid android:color="@color/action_button_download_progress_spinner_bg_color" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="2.6" android:useLevel="true" android:thickness="2.0dip">
                <rotate android:fromDegrees="0.0" android:toDegrees="360.0" android:pivotX="50.0%" android:pivotY="50.0%" />
                <solid android:color="@color/action_button_download_progress_spinner_fg_color" />
            </shape>
        </rotate>
    </item>
</layer-list>