    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_spinner_corner_radius" />
            <solid android:color="@color/guide_spinner_button_state_selected_bg_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_spinner_corner_radius" />
            <solid android:color="@color/guide_spinner_button_state_pressed_bg_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/guide_spinner_corner_radius" />
            <solid android:color="@color/guide_spinner_button_bg_color" />
        </shape>
    </item>
</selector>